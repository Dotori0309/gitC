#include <stdio.h>
#include <stdlib.h> // malloc 함수를 사용하기 위해 필요

typedef struct link_list
{
    int id;
    struct link_list *next;
} link_list;

link_list *init_list() // 연결 리스트 초기화
{
    return NULL;
}

link_list *add_Node(link_list *head, int id) // 연결 리스트 초기화
{
    link_list *new_Node = (struct link_list *)malloc(sizeof(struct link_list));
    if (new_Node == NULL)
    {
        printf("메모리 할당 실패\n");
        exit(1);
    }
    new_Node->id = id;
    new_Node->next = NULL;
    if (head == NULL)
    {
        head = new_Node;
    }
    else
    {
        link_list *cur = head;
        while (cur->next != NULL)
        {
            cur = cur->next;
        }
        cur->next = new_Node;
    }
    return head;
}

link_list *print_list(link_list *head) // 연결 리스트의 끝 찾기
{
    printf("연결리스트: \n");
    link_list *cur = head;
    while (cur != NULL)
    {
        printf("%d -> ", cur->id);
        cur = cur->next;
    }
    printf("NULL\n");
}

int main(void)
{
    link_list *head = init_list(); // 연결 리스트 초기화

    head = add_Node(head, 0);
    head = add_Node(head, 1);
    head = add_Node(head, 2);
    print_list(head);
    free(head);
    return 0;
}
